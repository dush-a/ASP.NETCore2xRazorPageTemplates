        <li data-target='#carousel-custom' data-slide-to='5'><img src='https://via.placeholder.com/100x50&text=slide6' alt='' /></li>
        <li data-target='#carousel-custom' data-slide-to='6'><img src='https://via.placeholder.com/100x50&text=slide7' alt='' /></li>
        <li data-target='#carousel-custom' data-slide-to='7'><img src='https://via.placeholder.com/100x50&text=slide8' alt='' /></li>
