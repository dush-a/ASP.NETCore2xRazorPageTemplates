@using RP.Core22.AppData.Models
@using RP.Core22.AppData.Services
@inject Microsoft.Extensions.Options.IOptions<BusinessInfo> businessOptions

@{
    var opt = businessOptions.Value;
    string e_mail = "mailto:" + (opt.Email).Trim();
    string intnlPhone;
    string localPhone = BusinessInfoService.getFormattedPhone(opt.Telephone, out intnlPhone);

}

<div class="footer-wrapper">
    <div class="container footer">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-4">
                <ul class="contact-info">
                    <li data-toggle="tooltip" data-placement="top" title="Dial within Australia"><em class="fas fa-phone"></em> @localPhone</li>
                    <li data-toggle="tooltip" data-placement="top" title="Dial from Overseas" ><em class="fas fa-globe"></em>  @intnlPhone</li>
                    <li><em class="fas fa-envelope"></em><a href=@e_mail> @opt.Email</a></li>
                    <li><em class="fas fa-map-marker"></em> @opt.StreetAddress, @opt.Suburb</li>
                    <li>&nbsp;&nbsp;&nbsp;&nbsp; @opt.State @opt.PostCode</li>
                    <li>&nbsp;&nbsp;&nbsp;&nbsp; @opt.Country</li>
                </ul>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                <ul class="footer-other-links clearfix">
                    <li><a href="#"><em class="fas fa-check-circle"></em>How much will it cost?</a></li>
                    <li><a href="#"><em class="fas fa-check-circle"></em>Frequently asked questions </a></li>
                    <li><a href="#"><em class="fas fa-check-circle"></em>Customer tesimonials</a></li>
